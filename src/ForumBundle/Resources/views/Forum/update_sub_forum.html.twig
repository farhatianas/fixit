
        <button type="button" class="btn-primary" data-toggle="modal" data-target="#loginModal{{ forum.id }}"> Edit </button>


    <div class="modal fade" role="dialog" id="loginModal{{ forum.id }}">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Please enter new Forum details</h3>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    {{ form_start(form, {'action': path('updateSubForum', { 'id': forum.id , 'parent_id': parent_id})}) }}
                    <label>Forum name</label>
                    {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
                    <br/>
                    <label>Forum description</label>
                    {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
                    <br/>
                    <label>Forum banner</label>
                    {{ form_widget(form.wallpaper, { 'attr': {'class': 'form-control'} }) }}
                    <br/>
                    <label>Forum tags</label>
                    {{ form_widget(form.tags, { 'attr': {'class': 'form-control', 'data-role': 'tagsinput'} }) }}
                    <br/>
                    <br/>
                    {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-warning'} }) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>


