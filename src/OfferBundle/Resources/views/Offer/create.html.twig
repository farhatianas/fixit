<div  style="padding-bottom: 20px;">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#serviceModal">create a new Service</button>
</div>

<div class="modal fade" role="dialog" id="serviceModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Please enter Service details</h3>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                {{ form_start(form, {'action': path('createService')}) }}
                <label>Service name</label>
                {{ form_widget(form.nameoffer, { 'attr': {'class': 'form-control'} }) }}
                <br/>
                <label>Service place</label>
                {{ form_widget(form.placeoffer, { 'attr': {'class': 'form-control'} }) }}
                <br/>
                <label>Service price (TND)</label>
                {{ form_widget(form.priceoffer, { 'attr': {'class': 'form-control'} }) }}
                <br/>
                <label>Service Description</label>
                {{ form_widget(form.descriptionoffer, { 'attr': {'class': 'form-control'} }) }}
                <br/>
                <label>Service Thumbnail</label>
                <br/>
                {{ form_widget(form.imageFile) }}
                <br/>
                <label>Service Category</label>
                {{ form_widget(form.categoryoffer, { 'attr': {'class': 'form-control'} }) }}
                <br/>
                <br/>
                {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-warning'} }) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>